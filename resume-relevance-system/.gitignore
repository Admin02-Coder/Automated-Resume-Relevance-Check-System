cat > .gitignore << 'EOL'
# Virtual Environment
venv/
env/
ENV/

# Python
__pycache__/
*.py[cod]
*$py.class
*.so
.Python
build/
develop-eggs/
dist/
downloads/
eggs/
.eggs/
lib/
lib64/
parts/
sdist/
var/
wheels/

# Environment variables - KEEP THESE SECRET!
.env
.env.local
.env.production

# Streamlit secrets - KEEP SECRET!
.streamlit/secrets.toml

# Database files - Don't commit user data
*.db
*.sqlite
*.sqlite3
resume_relevance.db

# Data folders with uploaded files - Privacy protection
data/resumes/*
data/job_descriptions/*
data/embeddings/*
!data/resumes/.gitkeep
!data/job_descriptions/.gitkeep
!data/embeddings/.gitkeep

# IDE files
.vscode/
.idea/
*.swp
*.swo

# OS files
.DS_Store
Thumbs.db

# Temporary files
*.tmp
temp/
tmp/

# Logs
*.log
logs/

# Node modules (if any)
node_modules/

# Coverage reports
htmlcov/
.coverage
.coverage.*

# Pytest
.pytest_cache/
EOL